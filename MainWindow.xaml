<Window x:Class="SkidrowKiller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Skidrow Killer"
        Height="900" Width="1300"
        MinHeight="600" MinWidth="850"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Icons -->
        <Geometry x:Key="ShieldIcon">M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1M12,5A3,3 0 0,1 15,8A3,3 0 0,1 12,11A3,3 0 0,1 9,8A3,3 0 0,1 12,5M17.13,17C15.92,18.85 14.11,20.24 12,20.92C9.89,20.24 8.08,18.85 6.87,17C6.53,16.5 6.24,16 6,15.47C6,13.82 8.71,12.47 12,12.47C15.29,12.47 18,13.79 18,15.47C17.76,16 17.47,16.5 17.13,17Z</Geometry>
        <Geometry x:Key="ScanIcon">M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z</Geometry>
        <Geometry x:Key="MonitorIcon">M21,16V4H3V16H21M21,2A2,2 0 0,1 23,4V16A2,2 0 0,1 21,18H14V20H16V22H8V20H10V18H3C1.89,18 1,17.1 1,16V4C1,2.89 1.89,2 3,2H21M5,6H14V11H5V6M15,6H19V8H15V6M19,9V14H15V9H19M5,12H9V14H5V12M10,12H14V14H10V12Z</Geometry>
        <Geometry x:Key="ListIcon">M3,4H21V8H3V4M3,10H21V14H3V10M3,16H21V20H3V16Z</Geometry>
        <Geometry x:Key="SettingsIcon">M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z</Geometry>
        <Geometry x:Key="MinimizeIcon">M20,14H4V10H20</Geometry>
        <Geometry x:Key="MaximizeIcon">M4,4H20V20H4V4M6,8V18H18V8H6Z</Geometry>
        <Geometry x:Key="CloseIcon">M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z</Geometry>
        <Geometry x:Key="WarningIcon">M13,14H11V10H13M13,18H11V16H13M1,21H23L12,2L1,21Z</Geometry>
        <Geometry x:Key="CheckIcon">M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z</Geometry>
        <Geometry x:Key="BackupIcon">M19.35,10.04C18.67,6.59 15.64,4 12,4C9.11,4 6.6,5.64 5.35,8.04C2.34,8.36 0,10.91 0,14A6,6 0 0,0 6,20H19A5,5 0 0,0 24,15C24,12.36 21.95,10.22 19.35,10.04M19,18H6A4,4 0 0,1 2,14C2,11.95 3.53,10.24 5.56,10.03L6.63,9.92L7.13,8.97C8.08,7.14 9.94,6 12,6C14.62,6 16.88,7.86 17.39,10.43L17.69,11.93L19.22,12.04C20.78,12.14 22,13.45 22,15A3,3 0 0,1 19,18M8,13H10.55V16H13.45V13H16L12,9L8,13Z</Geometry>
        <Geometry x:Key="NetworkIcon">M17.9,17.39C17.64,16.59 16.89,16 16,16H15V13A1,1 0 0,0 14,12H8V10H10A1,1 0 0,0 11,9V7H13A2,2 0 0,0 15,5V4.59C17.93,5.77 20,8.64 20,12C20,14.08 19.2,15.97 17.9,17.39M11,19.93C7.05,19.44 4,16.08 4,12C4,11.38 4.08,10.79 4.21,10.21L9,15V16A2,2 0 0,0 11,18M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z</Geometry>
    </Window.Resources>

    <Border Background="{StaticResource BgPrimaryBrush}"
            CornerRadius="12"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="{StaticResource BgSecondaryBrush}"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="16,0">
                        <Path Data="{StaticResource ShieldIcon}"
                              Fill="{StaticResource AccentPrimaryBrush}"
                              Width="20" Height="20" Stretch="Uniform" Margin="0,0,10,0"/>
                        <TextBlock Text="Skidrow Killer"
                                   FontFamily="{StaticResource PrimaryFont}"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AccentPrimaryBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text=" v2.0"
                                   FontSize="10"
                                   Foreground="{StaticResource TextTertiaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0"/>
                    </StackPanel>

                    <!-- Status Indicator -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Ellipse x:Name="StatusIndicator" Width="8" Height="8" Fill="{StaticResource SuccessBrush}" Margin="0,0,8,0"/>
                        <TextBlock x:Name="StatusText" Text="Protected" Foreground="{StaticResource SuccessBrush}" FontSize="12"/>
                    </StackPanel>

                    <!-- Window Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Style="{StaticResource WindowButtonStyle}" Click="MinimizeButton_Click">
                            <Path Data="{StaticResource MinimizeIcon}" Fill="{StaticResource TextSecondaryBrush}" Width="10" Height="10" Stretch="Uniform"/>
                        </Button>
                        <Button Style="{StaticResource WindowButtonStyle}" Click="MaximizeButton_Click">
                            <Path Data="{StaticResource MaximizeIcon}" Fill="{StaticResource TextSecondaryBrush}" Width="10" Height="10" Stretch="Uniform"/>
                        </Button>
                        <Button Style="{StaticResource CloseButtonStyle}" Click="CloseButton_Click">
                            <Path Data="{StaticResource CloseIcon}" Fill="{StaticResource TextSecondaryBrush}" Width="10" Height="10" Stretch="Uniform"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="200" MaxWidth="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,1,0"
                        Width="220">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#0d2137" Offset="0"/>
                            <GradientStop Color="#0a1929" Offset="0.3"/>
                            <GradientStop Color="#071320" Offset="0.7"/>
                            <GradientStop Color="#0a1929" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" MaxHeight="220"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Logo Section - Responsive -->
                        <Viewbox Grid.Row="0" Stretch="Uniform" StretchDirection="DownOnly" MaxHeight="200">
                            <Grid Width="220" Height="180" Margin="0,0,0,8">
                                <!-- Logo Background Glow -->
                                <Border>
                                    <Border.Background>
                                        <RadialGradientBrush GradientOrigin="0.5,0.3" Center="0.5,0.4" RadiusX="0.8" RadiusY="0.7">
                                            <GradientStop Color="#2029b6f6" Offset="0"/>
                                            <GradientStop Color="#1066bb6a" Offset="0.5"/>
                                            <GradientStop Color="#00000000" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                </Border>
                                <!-- Logo Image -->
                                <Image Source="/Assets/logo.png"
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="10"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <!-- Fade to background at bottom -->
                                <Border VerticalAlignment="Bottom" Height="50">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#000a1929" Offset="0"/>
                                            <GradientStop Color="#FF0a1929" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>
                        </Viewbox>

                        <!-- Navigation - Scrollable for small screens -->
                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Style="{StaticResource ModernScrollViewerStyle}">
                            <StackPanel Margin="8,0,4,0">
                                <Button x:Name="NavScan" Style="{StaticResource NavButtonActiveStyle}" Click="NavButton_Click" Tag="Scan">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="{StaticResource ScanIcon}" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Width="18" Height="18" Stretch="Uniform" Margin="0,0,12,0"/>
                                        <TextBlock Text="Scan" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="NavMonitor" Style="{StaticResource NavButtonStyle}" Click="NavButton_Click" Tag="Monitor">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="{StaticResource MonitorIcon}" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Width="18" Height="18" Stretch="Uniform" Margin="0,0,12,0"/>
                                        <TextBlock Text="Monitor" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="NavNetwork" Style="{StaticResource NavButtonStyle}" Click="NavButton_Click" Tag="Network">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="{StaticResource NetworkIcon}" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Width="18" Height="18" Stretch="Uniform" Margin="0,0,12,0"/>
                                        <TextBlock Text="Web Protection" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="NavThreats" Style="{StaticResource NavButtonStyle}" Click="NavButton_Click" Tag="Threats">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="{StaticResource WarningIcon}" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Width="18" Height="18" Stretch="Uniform" Margin="0,0,12,0"/>
                                        <TextBlock Text="Threats" VerticalAlignment="Center"/>
                                        <Border x:Name="ThreatCountBadge" Background="{StaticResource DangerBrush}" CornerRadius="10" Padding="6,2" Margin="8,0,0,0" Visibility="Collapsed">
                                            <TextBlock x:Name="ThreatCountText" Text="0" FontSize="10" Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="NavWhitelist" Style="{StaticResource NavButtonStyle}" Click="NavButton_Click" Tag="Whitelist">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="{StaticResource CheckIcon}" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Width="18" Height="18" Stretch="Uniform" Margin="0,0,12,0"/>
                                        <TextBlock Text="Whitelist" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="NavBackups" Style="{StaticResource NavButtonStyle}" Click="NavButton_Click" Tag="Backups">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="{StaticResource BackupIcon}" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Width="18" Height="18" Stretch="Uniform" Margin="0,0,12,0"/>
                                        <TextBlock Text="Backups" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="NavQuarantine" Style="{StaticResource NavButtonStyle}" Click="NavButton_Click" Tag="Quarantine">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ”’" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Quarantine" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Separator -->
                                <Rectangle Height="1" Margin="16,12,16,8">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#00000000" Offset="0"/>
                                            <GradientStop Color="#1e4976" Offset="0.2"/>
                                            <GradientStop Color="#1e4976" Offset="0.8"/>
                                            <GradientStop Color="#00000000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <Button x:Name="NavLicense" Style="{StaticResource NavButtonStyle}" Click="NavButton_Click" Tag="License">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ”‘" FontSize="16" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="License" VerticalAlignment="Center"/>
                                        <Border x:Name="LicenseBadge" CornerRadius="4" Padding="6,2" Margin="8,0,0,0" Visibility="Collapsed">
                                            <TextBlock x:Name="LicenseBadgeText" Text="PRO" FontSize="9" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="NavSettings" Style="{StaticResource NavButtonStyle}" Click="NavButton_Click" Tag="Settings">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="{StaticResource SettingsIcon}" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Width="18" Height="18" Stretch="Uniform" Margin="0,0,12,0"/>
                                        <TextBlock Text="Settings" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Footer -->
                        <StackPanel Grid.Row="2" Margin="12,0,12,16">
                            <!-- Thaiprompt Banner (above separator) -->
                            <Border Margin="0,0,0,12"
                                    CornerRadius="10"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="ThaipromptBanner_Click">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#1e4976" Offset="0"/>
                                        <GradientStop Color="#132f4c" Offset="0.5"/>
                                        <GradientStop Color="#0d2137" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border CornerRadius="10" Padding="12,10">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#1029b6f6" Offset="0"/>
                                            <GradientStop Color="#0866bb6a" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="Thaiprompt"
                                                   FontSize="13"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center">
                                            <TextBlock.Foreground>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                    <GradientStop Color="#29b6f6" Offset="0"/>
                                                    <GradientStop Color="#66bb6a" Offset="1"/>
                                                </LinearGradientBrush>
                                            </TextBlock.Foreground>
                                        </TextBlock>
                                        <TextBlock Text="thaiprompt.online"
                                                   FontSize="9"
                                                   Foreground="{StaticResource TextTertiaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Border>

                            <!-- Separator -->
                            <Rectangle Height="1" Margin="8,0,8,10">
                                <Rectangle.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#00000000" Offset="0"/>
                                        <GradientStop Color="#1e4976" Offset="0.3"/>
                                        <GradientStop Color="#1e4976" Offset="0.7"/>
                                        <GradientStop Color="#00000000" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>

                            <!-- Credit -->
                            <TextBlock Text="by xman studio"
                                       FontSize="10"
                                       Foreground="{StaticResource TextTertiaryBrush}"
                                       HorizontalAlignment="Center"
                                       Opacity="0.7"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content Area with Lava Lamp -->
                <Border Grid.Column="1" Background="{StaticResource BgPrimaryBrush}" CornerRadius="0,0,12,0">
                    <Grid>
                        <!-- Logo Background - Responsive -->
                        <Viewbox Stretch="Uniform"
                                 StretchDirection="DownOnly"
                                 MaxWidth="500"
                                 MaxHeight="500"
                                 Opacity="0.06"
                                 IsHitTestVisible="False"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Margin="50">
                            <Image Source="/Assets/logo.png"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Viewbox>

                        <!-- Lava Lamp Background (Light Blue + Green) -->
                        <Canvas ClipToBounds="True" IsHitTestVisible="False">
                            <Ellipse Width="400" Height="400" Canvas.Left="-100" Canvas.Top="-100">
                                <Ellipse.Fill>
                                    <RadialGradientBrush GradientOrigin="0.3,0.3">
                                        <GradientStop Color="#2529b6f6" Offset="0"/>
                                        <GradientStop Color="#120288d1" Offset="0.5"/>
                                        <GradientStop Color="#00000000" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:Name="Blob1"/>
                                </Ellipse.RenderTransform>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetName="Blob1" Storyboard.TargetProperty="X" From="0" To="500" Duration="0:0:30" AutoReverse="True"/>
                                                <DoubleAnimation Storyboard.TargetName="Blob1" Storyboard.TargetProperty="Y" From="0" To="300" Duration="0:0:25" AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>

                            <Ellipse Width="350" Height="350" Canvas.Right="-50" Canvas.Bottom="-50">
                                <Ellipse.Fill>
                                    <RadialGradientBrush GradientOrigin="0.7,0.7">
                                        <GradientStop Color="#2566bb6a" Offset="0"/>
                                        <GradientStop Color="#1243a047" Offset="0.5"/>
                                        <GradientStop Color="#00000000" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                                <Ellipse.RenderTransform>
                                    <TranslateTransform x:Name="Blob2"/>
                                </Ellipse.RenderTransform>
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetName="Blob2" Storyboard.TargetProperty="X" From="0" To="-400" Duration="0:0:28" AutoReverse="True"/>
                                                <DoubleAnimation Storyboard.TargetName="Blob2" Storyboard.TargetProperty="Y" From="0" To="-250" Duration="0:0:32" AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>
                        </Canvas>

                        <!-- Main Content Frame with ScrollViewer -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto"
                                      Style="{StaticResource ModernScrollViewerStyle}">
                            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="Transparent"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
