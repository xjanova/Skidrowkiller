<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================================== -->
    <!-- Skidrow Killer - Ocean Breeze Theme            -->
    <!-- Light Blue + Green - xman studio               -->
    <!-- ============================================== -->

    <!-- Primary Background Colors (Deep Ocean) -->
    <Color x:Key="BgPrimaryColor">#0a1929</Color>
    <Color x:Key="BgSecondaryColor">#0d2137</Color>
    <Color x:Key="BgTertiaryColor">#132f4c</Color>
    <Color x:Key="BgCardColor">#0f2744</Color>

    <!-- Accent Colors (Light Blue Primary) -->
    <Color x:Key="AccentPrimaryColor">#29b6f6</Color>
    <Color x:Key="AccentSecondaryColor">#0288d1</Color>
    <Color x:Key="AccentLightColor">#81d4fa</Color>

    <!-- Secondary Accent (Green) -->
    <Color x:Key="GreenPrimaryColor">#66bb6a</Color>
    <Color x:Key="GreenSecondaryColor">#43a047</Color>
    <Color x:Key="GreenLightColor">#a5d6a7</Color>

    <!-- Cyan for Safe/Info (Light Blue variant) -->
    <Color x:Key="CyanPrimaryColor">#4dd0e1</Color>
    <Color x:Key="CyanSecondaryColor">#26c6da</Color>
    <Color x:Key="CyanLightColor">#80deea</Color>

    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#4cef50</Color>
    <Color x:Key="WarningColor">#ffb74d</Color>
    <Color x:Key="DangerColor">#ef5350</Color>
    <Color x:Key="InfoColor">#29b6f6</Color>

    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#f5f9ff</Color>
    <Color x:Key="TextSecondaryColor">#a3c2db</Color>
    <Color x:Key="TextTertiaryColor">#6b8fad</Color>

    <!-- Border Colors -->
    <Color x:Key="BorderColor">#1e4976</Color>
    <Color x:Key="BorderHoverColor">#2d5f8f</Color>

    <!-- ============================================== -->
    <!-- Solid Color Brushes                           -->
    <!-- ============================================== -->

    <SolidColorBrush x:Key="BgPrimaryBrush" Color="{StaticResource BgPrimaryColor}"/>
    <SolidColorBrush x:Key="BgSecondaryBrush" Color="{StaticResource BgSecondaryColor}"/>
    <SolidColorBrush x:Key="BgTertiaryBrush" Color="{StaticResource BgTertiaryColor}"/>
    <SolidColorBrush x:Key="BgCardBrush" Color="{StaticResource BgCardColor}"/>

    <SolidColorBrush x:Key="AccentPrimaryBrush" Color="{StaticResource AccentPrimaryColor}"/>
    <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource AccentSecondaryColor}"/>
    <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentLightColor}"/>

    <SolidColorBrush x:Key="CyanPrimaryBrush" Color="{StaticResource CyanPrimaryColor}"/>
    <SolidColorBrush x:Key="CyanSecondaryBrush" Color="{StaticResource CyanSecondaryColor}"/>
    <SolidColorBrush x:Key="CyanLightBrush" Color="{StaticResource CyanLightColor}"/>

    <SolidColorBrush x:Key="GreenPrimaryBrush" Color="{StaticResource GreenPrimaryColor}"/>
    <SolidColorBrush x:Key="GreenSecondaryBrush" Color="{StaticResource GreenSecondaryColor}"/>
    <SolidColorBrush x:Key="GreenLightBrush" Color="{StaticResource GreenLightColor}"/>

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="BorderHoverBrush" Color="{StaticResource BorderHoverColor}"/>

    <!-- ============================================== -->
    <!-- Gradient Brushes                              -->
    <!-- ============================================== -->

    <!-- Primary Gradient (Light Blue) -->
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#81d4fa" Offset="0"/>
        <GradientStop Color="#29b6f6" Offset="0.4"/>
        <GradientStop Color="#0288d1" Offset="0.7"/>
        <GradientStop Color="#01579b" Offset="1"/>
    </LinearGradientBrush>

    <!-- Danger Gradient (Red for threats) -->
    <LinearGradientBrush x:Key="DangerGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#ef9a9a" Offset="0"/>
        <GradientStop Color="#ef5350" Offset="0.4"/>
        <GradientStop Color="#e53935" Offset="0.7"/>
        <GradientStop Color="#c62828" Offset="1"/>
    </LinearGradientBrush>

    <!-- Cyan Gradient (Safe/Info) -->
    <LinearGradientBrush x:Key="CyanGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#80deea" Offset="0"/>
        <GradientStop Color="#4dd0e1" Offset="0.3"/>
        <GradientStop Color="#26c6da" Offset="0.7"/>
        <GradientStop Color="#00acc1" Offset="1"/>
    </LinearGradientBrush>

    <!-- Success Gradient (Green) -->
    <LinearGradientBrush x:Key="SuccessGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#a5d6a7" Offset="0"/>
        <GradientStop Color="#66bb6a" Offset="0.4"/>
        <GradientStop Color="#43a047" Offset="0.7"/>
        <GradientStop Color="#2e7d32" Offset="1"/>
    </LinearGradientBrush>

    <!-- Accent Gradient (Light Blue to Green - Primary branding) -->
    <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#29b6f6" Offset="0"/>
        <GradientStop Color="#0288d1" Offset="0.5"/>
        <GradientStop Color="#43a047" Offset="1"/>
    </LinearGradientBrush>

    <!-- Warning Gradient (Orange) -->
    <LinearGradientBrush x:Key="WarningGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#ffe082" Offset="0"/>
        <GradientStop Color="#ffb74d" Offset="0.4"/>
        <GradientStop Color="#ffa726" Offset="0.7"/>
        <GradientStop Color="#f57c00" Offset="1"/>
    </LinearGradientBrush>

    <!-- Card Background Gradient -->
    <LinearGradientBrush x:Key="CardGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#173a5e" Offset="0"/>
        <GradientStop Color="#132f4c" Offset="0.3"/>
        <GradientStop Color="#0f2744" Offset="0.7"/>
        <GradientStop Color="#0d2137" Offset="1"/>
    </LinearGradientBrush>

    <!-- Sidebar Gradient -->
    <LinearGradientBrush x:Key="SidebarGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0d2137" Offset="0"/>
        <GradientStop Color="#0a1929" Offset="0.5"/>
        <GradientStop Color="#071320" Offset="1"/>
    </LinearGradientBrush>

    <!-- Lava Lamp Gradients (Light Blue + Green) -->
    <RadialGradientBrush x:Key="LavaLamp1Brush" GradientOrigin="0.3,0.3" Center="0.5,0.5" RadiusX="0.8" RadiusY="0.8">
        <GradientStop Color="#3029b6f6" Offset="0"/>
        <GradientStop Color="#150288d1" Offset="0.5"/>
        <GradientStop Color="#00000000" Offset="1"/>
    </RadialGradientBrush>

    <RadialGradientBrush x:Key="LavaLamp2Brush" GradientOrigin="0.7,0.7" Center="0.5,0.5" RadiusX="0.6" RadiusY="0.6">
        <GradientStop Color="#2566bb6a" Offset="0"/>
        <GradientStop Color="#1043a047" Offset="0.5"/>
        <GradientStop Color="#00000000" Offset="1"/>
    </RadialGradientBrush>

    <!-- ============================================== -->
    <!-- Drop Shadow Effects                           -->
    <!-- ============================================== -->

    <DropShadowEffect x:Key="CardShadow"
                      BlurRadius="30"
                      ShadowDepth="5"
                      Direction="270"
                      Color="#000508"
                      Opacity="0.7"/>

    <DropShadowEffect x:Key="DangerGlow"
                      BlurRadius="25"
                      ShadowDepth="0"
                      Color="{StaticResource DangerColor}"
                      Opacity="0.6"/>

    <DropShadowEffect x:Key="CyanGlow"
                      BlurRadius="25"
                      ShadowDepth="0"
                      Color="{StaticResource CyanPrimaryColor}"
                      Opacity="0.6"/>

    <DropShadowEffect x:Key="SuccessGlow"
                      BlurRadius="25"
                      ShadowDepth="0"
                      Color="{StaticResource SuccessColor}"
                      Opacity="0.6"/>

    <DropShadowEffect x:Key="PrimaryGlow"
                      BlurRadius="25"
                      ShadowDepth="0"
                      Color="{StaticResource AccentPrimaryColor}"
                      Opacity="0.6"/>

    <DropShadowEffect x:Key="GreenGlow"
                      BlurRadius="25"
                      ShadowDepth="0"
                      Color="{StaticResource GreenPrimaryColor}"
                      Opacity="0.6"/>

</ResourceDictionary>
