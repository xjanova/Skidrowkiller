<Page x:Class="SkidrowKiller.Views.BackupsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:SkidrowKiller.Views"
      mc:Ignorable="d"
      Title="Backups">

    <Page.Resources>
        <local:FileSizeConverter x:Key="FileSizeConverter"/>
    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="â˜ï¸ Backups"
                       Style="{StaticResource HeaderTextStyle}"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Files are backed up before removal so you can restore them if needed"
                       Style="{StaticResource BodyTextStyle}"/>
        </StackPanel>

        <!-- Stats -->
        <Border Grid.Row="1" Style="{StaticResource GlassCardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Total Backups"
                               Style="{StaticResource BodyTextStyle}"/>
                    <TextBlock x:Name="BackupCountLabel"
                               Text="0"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource CyanPrimaryBrush}"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Total Size"
                               Style="{StaticResource BodyTextStyle}"/>
                    <TextBlock x:Name="BackupSizeLabel"
                               Text="0 B"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{StaticResource CyanPrimaryBrush}"/>
                </StackPanel>

                <Button Grid.Column="2"
                        Content="Clean Old Backups"
                        Style="{StaticResource NavButtonStyle}"
                        VerticalAlignment="Center"
                        Click="CleanButton_Click"/>
            </Grid>
        </Border>

        <!-- Backups List -->
        <Border Grid.Row="2" Style="{StaticResource GlassCardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Backup History"
                               Style="{StaticResource SubHeaderTextStyle}"/>
                    <Button Content="Refresh"
                            Style="{StaticResource NavButtonStyle}"
                            Padding="12,4"
                            Margin="16,0,0,0"
                            Click="RefreshButton_Click"/>
                </StackPanel>

                <ListBox Grid.Row="1"
                         x:Name="BackupsListBox"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemContainerStyle="{StaticResource ThreatListItemStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <Border Grid.Column="0"
                                        Width="40" Height="40"
                                        Background="#2006b6d4"
                                        CornerRadius="8"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ“¦"
                                               FontSize="18"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding OriginalPath}"
                                               Foreground="{StaticResource TextTertiaryBrush}"
                                               FontSize="11"
                                               TextTrimming="CharacterEllipsis"
                                               MaxWidth="500"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="{Binding BackedUpAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Size -->
                                <TextBlock Grid.Column="2"
                                           Text="{Binding Size, Converter={StaticResource FileSizeConverter}}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontSize="11"
                                           Margin="12,0"
                                           VerticalAlignment="Center"/>

                                <!-- Actions -->
                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="ðŸ”„"
                                            ToolTip="Restore"
                                            Tag="{Binding Id}"
                                            Style="{StaticResource NavButtonStyle}"
                                            Padding="8,4"
                                            Click="RestoreButton_Click"/>
                                    <Button Content="ðŸ—‘ï¸"
                                            ToolTip="Delete backup"
                                            Tag="{Binding Id}"
                                            Style="{StaticResource NavButtonStyle}"
                                            Padding="8,4"
                                            Click="DeleteButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Empty State -->
                <StackPanel x:Name="EmptyState"
                            Grid.Row="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="â˜ï¸" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="No backups yet"
                               Style="{StaticResource SubHeaderTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"/>
                    <TextBlock Text="Removed items will appear here"
                               Style="{StaticResource BodyTextStyle}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Info -->
        <Border Grid.Row="3" Margin="0,16,0,0" Padding="16,12" Background="#10ffffff" CornerRadius="8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="â„¹ï¸" FontSize="14" Margin="0,0,8,0"/>
                <TextBlock Text="Backups older than 7 days can be automatically cleaned to save space."
                           Style="{StaticResource BodyTextStyle}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
