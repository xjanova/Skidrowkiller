<Page x:Class="SkidrowKiller.Views.NetworkProtectionView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Network Protection">

    <Page.Resources>
        <Geometry x:Key="GlobeIcon">M17.9,17.39C17.64,16.59 16.89,16 16,16H15V13A1,1 0 0,0 14,12H8V10H10A1,1 0 0,0 11,9V7H13A2,2 0 0,0 15,5V4.59C17.93,5.77 20,8.64 20,12C20,14.08 19.2,15.97 17.9,17.39M11,19.93C7.05,19.44 4,16.08 4,12C4,11.38 4.08,10.79 4.21,10.21L9,15V16A2,2 0 0,0 11,18M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z</Geometry>
        <Geometry x:Key="BlockIcon">M12,2C17.5,2 22,6.5 22,12C22,17.5 17.5,22 12,22C6.5,22 2,17.5 2,12C2,6.5 6.5,2 12,2M12,4C7.58,4 4,7.58 4,12C4,16.42 7.58,20 12,20C16.42,20 20,16.42 20,12C20,7.58 16.42,4 12,4M6,12L18,12</Geometry>
        <Geometry x:Key="ShieldIcon">M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1Z</Geometry>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <Grid Grid.Row="0" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Network Protection"
                           Style="{StaticResource HeaderTextStyle}"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Block malicious domains, warez sites, and suspicious connections"
                           Style="{StaticResource BodyTextStyle}"/>
            </StackPanel>

            <!-- Main Status Card -->
            <Border Grid.Row="1" Style="{StaticResource GlassCardStyle}" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Globe Icon with Animation -->
                    <Grid Grid.Column="0" Width="100" Height="100" Margin="0,0,24,0">
                        <!-- Glow Effect -->
                        <Ellipse x:Name="GlobeGlow" Width="90" Height="90" Opacity="0.3">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#4029b6f6" Offset="0"/>
                                    <GradientStop Color="#00000000" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>

                        <!-- Rotating Ring -->
                        <Ellipse x:Name="ProtectionRing" Width="85" Height="85" StrokeThickness="2"
                                 StrokeDashArray="4,2" Opacity="0.5">
                            <Ellipse.Stroke>
                                <LinearGradientBrush>
                                    <GradientStop Color="#29b6f6" Offset="0"/>
                                    <GradientStop Color="#f44336" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Stroke>
                            <Ellipse.RenderTransform>
                                <RotateTransform x:Name="RingRotation" CenterX="42.5" CenterY="42.5"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>

                        <!-- Globe Icon -->
                        <Path x:Name="GlobeIconPath" Width="50" Height="50" Stretch="Uniform"
                              HorizontalAlignment="Center" VerticalAlignment="Center"
                              Data="{StaticResource GlobeIcon}">
                            <Path.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#29b6f6" Offset="0"/>
                                    <GradientStop Color="#66bb6a" Offset="1"/>
                                </LinearGradientBrush>
                            </Path.Fill>
                        </Path>
                    </Grid>

                    <!-- Status Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="StatusIndicator"
                                     Width="12" Height="12"
                                     Fill="{StaticResource TextTertiaryBrush}"
                                     Margin="0,0,10,0"/>
                            <TextBlock x:Name="StatusLabel"
                                       Text="Initializing..."
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextTertiaryBrush}"/>
                        </StackPanel>

                        <TextBlock x:Name="StatusDescription"
                                   Text="Starting web protection services..."
                                   Style="{StaticResource BodyTextStyle}"
                                   Margin="22,8,0,0"
                                   Opacity="0.8"/>

                        <!-- Stats Row -->
                        <StackPanel Orientation="Horizontal" Margin="22,16,0,0">
                            <Border Background="#15ffffff" CornerRadius="6" Padding="12,6" Margin="0,0,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Blocked: " Style="{StaticResource BodyTextStyle}" Opacity="0.7"/>
                                    <TextBlock x:Name="BlockedCountLabel" Text="0" FontWeight="Bold"
                                               Foreground="{StaticResource DangerBrush}"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#15ffffff" CornerRadius="6" Padding="12,6" Margin="0,0,12,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Domains: " Style="{StaticResource BodyTextStyle}" Opacity="0.7"/>
                                    <TextBlock x:Name="DomainsCountLabel" Text="0" FontWeight="Bold"
                                               Foreground="{StaticResource CyanPrimaryBrush}"/>
                                </StackPanel>
                            </Border>
                            <Border Background="#15ffffff" CornerRadius="6" Padding="12,6">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Checks: " Style="{StaticResource BodyTextStyle}" Opacity="0.7"/>
                                    <TextBlock x:Name="ChecksCountLabel" Text="0" FontWeight="Bold"
                                               Foreground="{StaticResource GreenPrimaryBrush}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- Toggle Button -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="16,0,0,0">
                        <Button x:Name="ToggleButton"
                                Content="Start Protection"
                                MinWidth="140"
                                Padding="20,12"
                                Click="ToggleButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Stats Cards -->
            <Grid Grid.Row="2" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Warez Sites -->
                <Border Grid.Column="0" Background="#10ffffff" CornerRadius="10" Padding="16" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="WAREZ SITES" FontSize="10" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,0,8"/>
                        <TextBlock x:Name="WarezBlockedLabel" Text="0" FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource DangerBrush}"/>
                        <TextBlock Text="blocked" Style="{StaticResource BodyTextStyle}" Opacity="0.6" FontSize="11"/>
                    </StackPanel>
                </Border>

                <!-- Crack Sites -->
                <Border Grid.Column="1" Background="#10ffffff" CornerRadius="10" Padding="16" Margin="4,0">
                    <StackPanel>
                        <TextBlock Text="CRACK SITES" FontSize="10" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,0,8"/>
                        <TextBlock x:Name="CrackBlockedLabel" Text="0" FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource WarningBrush}"/>
                        <TextBlock Text="blocked" Style="{StaticResource BodyTextStyle}" Opacity="0.6" FontSize="11"/>
                    </StackPanel>
                </Border>

                <!-- Torrent Sites -->
                <Border Grid.Column="2" Background="#10ffffff" CornerRadius="10" Padding="16" Margin="4,0">
                    <StackPanel>
                        <TextBlock Text="TORRENT SITES" FontSize="10" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,0,8"/>
                        <TextBlock x:Name="TorrentBlockedLabel" Text="0" FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource CyanPrimaryBrush}"/>
                        <TextBlock Text="blocked" Style="{StaticResource BodyTextStyle}" Opacity="0.6" FontSize="11"/>
                    </StackPanel>
                </Border>

                <!-- Hosts Entries -->
                <Border Grid.Column="3" Background="#10ffffff" CornerRadius="10" Padding="16" Margin="8,0,0,0">
                    <StackPanel>
                        <TextBlock Text="HOSTS BLOCKED" FontSize="10" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,0,8"/>
                        <TextBlock x:Name="HostsBlockedLabel" Text="0" FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource GreenPrimaryBrush}"/>
                        <TextBlock Text="entries" Style="{StaticResource BodyTextStyle}" Opacity="0.6" FontSize="11"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Two Column Layout: Recent Blocks and Activity Log -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Recent Blocked Connections -->
                <Border Grid.Column="0" Style="{StaticResource GlassCardStyle}" Margin="0,0,8,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource DangerBrush}" Margin="0,0,8,0"/>
                            <TextBlock Text="Recent Blocked Connections"
                                       Style="{StaticResource SubHeaderTextStyle}"/>
                        </StackPanel>

                        <ListView Grid.Row="1"
                                  x:Name="BlockedConnectionsList"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                  SelectionChanged="BlockedConnectionsList_SelectionChanged">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#10ffffff" CornerRadius="6" Padding="12,8" Margin="0,0,0,4">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Ellipse Grid.Column="0" Width="8" Height="8"
                                                     Fill="{StaticResource DangerBrush}"
                                                     VerticalAlignment="Center" Margin="0,0,10,0"/>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Domain}" FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                    <TextBlock Text="{Binding Category}" FontSize="11"
                                                               Foreground="{StaticResource DangerBrush}"/>
                                                    <TextBlock Text=" â€¢ " FontSize="11"
                                                               Foreground="{StaticResource TextTertiaryBrush}"/>
                                                    <TextBlock Text="{Binding ProcessName}" FontSize="11"
                                                               Foreground="{StaticResource TextTertiaryBrush}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- Analyze Button -->
                                            <Button Grid.Column="2"
                                                    Content="Analyze"
                                                    FontSize="10"
                                                    Padding="8,4"
                                                    Margin="8,0"
                                                    Tag="{Binding}"
                                                    Click="AnalyzeConnection_Click"
                                                    ToolTip="Analyze source and find root cause"/>

                                            <TextBlock Grid.Column="3" Text="{Binding TimeString}" FontSize="10"
                                                       Foreground="{StaticResource TextTertiaryBrush}"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,8,0,0"
                                    Visibility="{Binding ElementName=BlockedConnectionsList, Path=SelectedItem, Converter={StaticResource NullToVisibilityConverter}, FallbackValue=Collapsed}">
                            <Button x:Name="DeepScanButton" Content="Deep Scan Selected"
                                    Padding="12,8" Margin="0,0,8,0"
                                    Click="DeepScanSelected_Click"/>
                            <Button x:Name="KillProcessButton" Content="Kill Process"
                                    Padding="12,8"
                                    Click="KillSelectedProcess_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Activity Log -->
                <Border Grid.Column="1" Style="{StaticResource GlassCardStyle}" Margin="8,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,12">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="LogIndicator" Width="8" Height="8" Fill="{StaticResource GreenPrimaryBrush}" Margin="0,0,8,0"/>
                                <TextBlock Text="Activity Log"
                                           Style="{StaticResource SubHeaderTextStyle}"/>
                            </StackPanel>
                            <Button Content="Clear"
                                    Style="{StaticResource NavButtonStyle}"
                                    Padding="12,6"
                                    HorizontalAlignment="Right"
                                    Click="ClearLog_Click"/>
                        </Grid>

                        <TextBox Grid.Row="1"
                                 x:Name="LogTextBox"
                                 Style="{StaticResource LogTextBoxStyle}"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="1" Background="#15000000" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
            <Grid Margin="16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Protection Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse x:Name="StatusBarIndicator" Width="8" Height="8" Fill="{StaticResource TextTertiaryBrush}" Margin="0,0,8,0"/>
                    <TextBlock x:Name="StatusBarText" Text="Web Protection Disabled" FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- Center Info -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:Name="ActivityText" Text="" FontSize="11"
                               Foreground="{StaticResource TextTertiaryBrush}" Opacity="0.7"/>
                </StackPanel>

                <!-- Hosts File Status -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="16,0">
                    <TextBlock Text="Hosts File: " FontSize="11" Foreground="{StaticResource TextTertiaryBrush}"/>
                    <TextBlock x:Name="HostsStatusLabel" Text="Not Modified" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- Last Block -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="16,0,0,0">
                    <TextBlock Text="Last Block: " FontSize="11" Foreground="{StaticResource TextTertiaryBrush}"/>
                    <TextBlock x:Name="LastBlockLabel" Text="None" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
