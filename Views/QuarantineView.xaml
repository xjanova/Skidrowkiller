<Page x:Class="SkidrowKiller.Views.QuarantineView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Quarantine">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="ðŸ”’ Quarantine"
                       Style="{StaticResource HeaderTextStyle}"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Safely isolated threats. You can restore or permanently delete items."
                       Style="{StaticResource BodyTextStyle}"/>
        </StackPanel>

        <!-- Stats Card -->
        <Border Grid.Row="1" Style="{StaticResource GlassCardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Quarantined Count -->
                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                    <TextBlock Text="Quarantined Items"
                               Style="{StaticResource BodyTextStyle}"
                               Margin="0,0,0,4"/>
                    <TextBlock x:Name="QuarantinedCountLabel"
                               Text="0"
                               Style="{StaticResource SubHeaderTextStyle}"
                               Foreground="{StaticResource WarningBrush}"/>
                </StackPanel>

                <!-- Total Size -->
                <StackPanel Grid.Column="1" Margin="0,0,16,0">
                    <TextBlock Text="Total Size"
                               Style="{StaticResource BodyTextStyle}"
                               Margin="0,0,0,4"/>
                    <TextBlock x:Name="TotalSizeLabel"
                               Text="0 MB"
                               Style="{StaticResource SubHeaderTextStyle}"
                               Foreground="{StaticResource CyanPrimaryBrush}"/>
                </StackPanel>

                <!-- Oldest Item -->
                <StackPanel Grid.Column="2" Margin="0,0,16,0">
                    <TextBlock Text="Oldest Item"
                               Style="{StaticResource BodyTextStyle}"
                               Margin="0,0,0,4"/>
                    <TextBlock x:Name="OldestItemLabel"
                               Text="-"
                               Style="{StaticResource SubHeaderTextStyle}"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Refresh"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="RefreshButton_Click"
                            Margin="0,0,8,0"/>
                    <Button Content="Delete All"
                            Style="{StaticResource DangerButtonStyle}"
                            Click="DeleteAllButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Quarantine List -->
        <Border Grid.Row="2" Style="{StaticResource GlassCardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           x:Name="ItemCountLabel"
                           Text="0 items in quarantine"
                           Style="{StaticResource BodyTextStyle}"
                           Margin="0,0,0,12"/>

                <!-- Empty State -->
                <StackPanel x:Name="EmptyState"
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="Visible">
                    <TextBlock Text="ðŸ”’"
                               FontSize="48"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <TextBlock Text="No items in quarantine"
                               Style="{StaticResource SubHeaderTextStyle}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Quarantined threats will appear here"
                               Style="{StaticResource BodyTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Items List -->
                <ListBox x:Name="QuarantineListBox"
                         Grid.Row="1"
                         Style="{StaticResource ModernListBoxStyle}"
                         SelectionMode="Extended"
                         Visibility="Collapsed">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#10FFFFFF"
                                    CornerRadius="8"
                                    Padding="16,12"
                                    Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="ðŸ”’" FontSize="14" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding FileName}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontSize="14"/>
                                            <Border Background="{StaticResource DangerBrush}"
                                                    CornerRadius="4"
                                                    Padding="6,2"
                                                    Margin="8,0,0,0">
                                                <TextBlock Text="{Binding Severity}"
                                                           FontSize="10"
                                                           Foreground="White"/>
                                            </Border>
                                        </StackPanel>

                                        <TextBlock Text="{Binding OriginalPath}"
                                                   Foreground="{StaticResource TextTertiaryBrush}"
                                                   FontSize="11"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="22,0,0,4"/>

                                        <StackPanel Orientation="Horizontal" Margin="22,4,0,0">
                                            <TextBlock Text="Threat:"
                                                       Foreground="{StaticResource TextTertiaryBrush}"
                                                       FontSize="11"
                                                       Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding ThreatName}"
                                                       Foreground="{StaticResource WarningBrush}"
                                                       FontSize="11"
                                                       Margin="0,0,16,0"/>

                                            <TextBlock Text="Score:"
                                                       Foreground="{StaticResource TextTertiaryBrush}"
                                                       FontSize="11"
                                                       Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding ThreatScore}"
                                                       Foreground="{StaticResource DangerBrush}"
                                                       FontSize="11"
                                                       Margin="0,0,16,0"/>

                                            <TextBlock Text="Date:"
                                                       Foreground="{StaticResource TextTertiaryBrush}"
                                                       FontSize="11"
                                                       Margin="0,0,4,0"/>
                                            <TextBlock Text="{Binding QuarantinedAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <Button Content="Restore"
                                                Style="{StaticResource SecondaryButtonStyle}"
                                                Tag="{Binding}"
                                                Click="RestoreButton_Click"
                                                Margin="0,0,8,0"
                                                ToolTip="Restore to original location"/>
                                        <Button Content="Delete"
                                                Style="{StaticResource DangerButtonStyle}"
                                                Tag="{Binding}"
                                                Click="DeleteButton_Click"
                                                ToolTip="Permanently delete"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Info -->
        <Border Grid.Row="3" Margin="0,16,0,0" Padding="16,12" Background="#10ffffff" CornerRadius="8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="â„¹ï¸" FontSize="14" Margin="0,0,8,0"/>
                <TextBlock Text="Quarantined items are encrypted and isolated. Restore only if you're certain the item is safe."
                           Style="{StaticResource BodyTextStyle}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
