<Page x:Class="SkidrowKiller.Views.ScanView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Scan">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Scan Buttons -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="ðŸ” Smart Scan"
                           Style="{StaticResource HeaderTextStyle}"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Intelligent malware detection with scoring system to reduce false positives"
                           Style="{StaticResource BodyTextStyle}"/>
            </StackPanel>

            <!-- Scan Buttons (Top Right) -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="StartButton"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Content="ðŸ” Start Scan"
                        Width="140"
                        Click="StartButton_Click"/>

                <Button x:Name="PauseButton"
                        Style="{StaticResource SuccessButtonStyle}"
                        Content="â¸ï¸ Pause"
                        Width="100"
                        Margin="8,0,0,0"
                        IsEnabled="False"
                        Click="PauseButton_Click"/>

                <Button x:Name="StopButton"
                        Style="{StaticResource DangerButtonStyle}"
                        Content="â¹ï¸ Stop"
                        Width="100"
                        Margin="8,0,0,0"
                        IsEnabled="False"
                        Click="StopButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Scan Options -->
        <Border Grid.Row="1" Style="{StaticResource GlassCardStyle}" Margin="0,0,0,16">
            <StackPanel>
                <!-- Scan Mode Selection -->
                <TextBlock Text="Scan Mode"
                           Style="{StaticResource SubHeaderTextStyle}"
                           Margin="0,0,0,12"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <RadioButton x:Name="QuickScanRadio"
                                 Content="âš¡ Quick Scan"
                                 IsChecked="True"
                                 Style="{StaticResource ModernRadioButtonStyle}"
                                 GroupName="ScanMode"
                                 Checked="ScanModeRadio_Checked"/>
                    <RadioButton x:Name="DeepScanRadio"
                                 Content="ðŸ”¬ Deep Scan"
                                 Style="{StaticResource ModernRadioButtonStyle}"
                                 GroupName="ScanMode"
                                 Margin="24,0,0,0"
                                 Checked="ScanModeRadio_Checked"/>
                    <RadioButton x:Name="CustomScanRadio"
                                 Content="âš™ï¸ Custom"
                                 Style="{StaticResource ModernRadioButtonStyle}"
                                 GroupName="ScanMode"
                                 Margin="24,0,0,0"
                                 Checked="ScanModeRadio_Checked"/>
                </StackPanel>

                <!-- Scan Mode Description -->
                <Border Background="#10ffffff" CornerRadius="6" Padding="12,8" Margin="0,0,0,16">
                    <TextBlock x:Name="ScanModeDescription"
                               Text="Scans startup locations, running processes, and common malware hiding spots. Fast and efficient."
                               Style="{StaticResource BodyTextStyle}"
                               TextWrapping="Wrap"/>
                </Border>

                <Separator Margin="0,0,0,16" Background="{StaticResource BorderBrush}"/>

                <!-- Drive Selection -->
                <TextBlock Text="Select Drives to Scan"
                           Style="{StaticResource SubHeaderTextStyle}"
                           Margin="0,0,0,12"/>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" MaxHeight="60"
                              Style="{StaticResource ModernScrollViewerStyle}">
                    <ItemsControl x:Name="DrivesList">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Style="{StaticResource ToggleSwitchStyle}"
                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          Content="{Binding DisplayName}"
                                          Margin="0,0,20,8"
                                          IsEnabled="{Binding IsEnabled}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Separator Margin="0,16" Background="{StaticResource BorderBrush}"/>

                <!-- Scan Target Options (for Custom mode) -->
                <StackPanel x:Name="CustomOptionsPanel" Visibility="Collapsed">
                    <TextBlock Text="Scan Targets"
                               Style="{StaticResource SubHeaderTextStyle}"
                               Margin="0,0,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox x:Name="ScanFilesCheck"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsChecked="True"
                                  Content="Scan Files"
                                  Grid.Column="0"/>

                        <CheckBox x:Name="ScanRegistryCheck"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsChecked="True"
                                  Content="Scan Registry"
                                  Grid.Column="1"/>

                        <CheckBox x:Name="ScanProcessesCheck"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsChecked="True"
                                  Content="Scan Memory"
                                  Grid.Column="2"/>
                    </Grid>

                    <Separator Margin="0,12" Background="{StaticResource BorderBrush}"/>

                    <!-- Specific Folder Selection -->
                    <TextBlock Text="Scan Specific Folders (Optional)"
                               Style="{StaticResource SubHeaderTextStyle}"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Add folders to scan only those locations instead of entire drives"
                               Style="{StaticResource BodyTextStyle}"
                               Opacity="0.7" Margin="0,0,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Selected Folders List -->
                        <Border Grid.Column="0" Background="{StaticResource BgTertiaryBrush}"
                                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                CornerRadius="6" Padding="8" MinHeight="60" MaxHeight="100">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                                          Style="{StaticResource ModernScrollViewerStyle}">
                                <ItemsControl x:Name="CustomFoldersList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding}" Grid.Column="0"
                                                           Style="{StaticResource BodyTextStyle}"
                                                           FontSize="11" TextTrimming="CharacterEllipsis"
                                                           VerticalAlignment="Center"
                                                           ToolTip="{Binding}"/>
                                                <Button Grid.Column="1" Content="âœ•"
                                                        Style="{StaticResource NavButtonStyle}"
                                                        FontSize="10" Padding="4,2"
                                                        Margin="4,0,0,0"
                                                        Tag="{Binding}"
                                                        Click="RemoveCustomFolder_Click"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>

                        <!-- Add Folder Button -->
                        <Button x:Name="AddFolderButton" Grid.Column="1"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="8,0,0,0" Padding="12,8"
                                VerticalAlignment="Top"
                                Click="AddCustomFolder_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ“" Margin="0,0,6,0"/>
                                <TextBlock Text="Add Folder"/>
                            </StackPanel>
                        </Button>

                        <!-- Clear All Button -->
                        <Button x:Name="ClearFoldersButton" Grid.Column="2"
                                Style="{StaticResource NavButtonStyle}"
                                Margin="8,0,0,0" Padding="12,8"
                                VerticalAlignment="Top"
                                Click="ClearCustomFolders_Click"
                                Content="Clear All"/>
                    </Grid>

                    <TextBlock x:Name="FolderHintText"
                               Text="ðŸ’¡ No folders added - will scan selected drives"
                               Style="{StaticResource BodyTextStyle}"
                               FontSize="11" Opacity="0.6"
                               Margin="0,8,0,0"/>

                    <Separator Margin="0,16" Background="{StaticResource BorderBrush}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="AutoBackupCheck"
                              Style="{StaticResource ToggleSwitchStyle}"
                              IsChecked="True"
                              Content="Auto Backup before delete"/>

                    <CheckBox x:Name="ConfirmDeleteCheck"
                              Style="{StaticResource ToggleSwitchStyle}"
                              IsChecked="True"
                              Content="Confirm uncertain items"
                              Margin="40,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Compact Progress Bar -->
        <Border Grid.Row="2" Background="{StaticResource BgSecondaryBrush}" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 1: Progress info -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status with Thinking Animation -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- Thinking/Spinning Animation -->
                        <Grid x:Name="ThinkingIndicator" Width="20" Height="20" Margin="0,0,8,0" Visibility="Collapsed">
                            <Ellipse Width="20" Height="20" StrokeThickness="2" Stroke="{StaticResource BgTertiaryBrush}"/>
                            <Ellipse x:Name="SpinningArc" Width="20" Height="20" StrokeThickness="2" RenderTransformOrigin="0.5,0.5">
                                <Ellipse.Stroke>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="{StaticResource CyanPrimaryColor}" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="0.75"/>
                                    </LinearGradientBrush>
                                </Ellipse.Stroke>
                                <Ellipse.RenderTransform>
                                    <RotateTransform x:Name="SpinningRotation" Angle="0"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                        </Grid>

                        <!-- Section Badge -->
                        <Border x:Name="SectionBadge" Background="{StaticResource CyanPrimaryBrush}" CornerRadius="4" Padding="6,2">
                            <TextBlock x:Name="SectionLabel" Text="Ready" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource BgPrimaryBrush}"/>
                        </Border>
                        <TextBlock x:Name="SectionIndexLabel" Text="" Style="{StaticResource BodyTextStyle}" FontSize="11" VerticalAlignment="Center" Margin="6,0,0,0"/>

                        <!-- Pre-scan status text -->
                        <TextBlock x:Name="PreScanStatusLabel" Text="" Style="{StaticResource BodyTextStyle}" FontSize="11"
                                   Foreground="{StaticResource CyanPrimaryBrush}" FontStyle="Italic" VerticalAlignment="Center" Margin="8,0,0,0" Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- Combined Progress Bars -->
                    <Grid Grid.Column="1" Margin="12,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Section Progress (slim) -->
                        <Border Grid.Row="0" Background="{StaticResource BgTertiaryBrush}" CornerRadius="3" Height="6" Margin="0,0,0,2">
                            <Border x:Name="SectionProgressFill" Background="{StaticResource CyanGradientBrush}" CornerRadius="3" HorizontalAlignment="Left" Width="0"/>
                        </Border>

                        <!-- Total Progress (slim) -->
                        <Border Grid.Row="1" Background="{StaticResource BgTertiaryBrush}" CornerRadius="3" Height="6" Margin="0,2,0,0">
                            <Border x:Name="TotalProgressFill" Background="{StaticResource SuccessGradientBrush}" CornerRadius="3" HorizontalAlignment="Left" Width="0"/>
                        </Border>
                    </Grid>

                    <!-- Percentages -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                        <TextBlock x:Name="SectionPercentLabel" Text="0%" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource CyanPrimaryBrush}" Width="35" TextAlignment="Right"/>
                        <TextBlock Text="/" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" Margin="2,0"/>
                        <TextBlock x:Name="TotalPercentLabel" Text="0%" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource SuccessBrush}" Width="35" TextAlignment="Left"/>
                    </StackPanel>

                    <!-- Stats -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="ScannedCountLabel" Text="0" FontSize="14" FontWeight="Bold" Foreground="{StaticResource CyanPrimaryBrush}"/>
                        <TextBlock Text=" items" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Bottom" Margin="2,0,12,1"/>
                        <TextBlock x:Name="FoundCountLabel" Text="0" FontSize="14" FontWeight="Bold" Foreground="{StaticResource DangerBrush}"/>
                        <TextBlock Text=" threats" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Bottom" Margin="2,0,0,1"/>
                    </StackPanel>
                </Grid>

                <!-- Row 2: Current scanning path -->
                <TextBlock Grid.Row="1" x:Name="CurrentItemLabel" Text=""
                           Style="{StaticResource BodyTextStyle}" FontSize="10"
                           Foreground="{StaticResource TextTertiaryBrush}"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,6,0,0"/>

                <!-- Hidden elements for compatibility -->
                <TextBlock x:Name="StatusLabel" Text="Ready to scan" Visibility="Collapsed"/>
                <TextBlock x:Name="TotalItemsLabel" Text="" Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- Log -->
        <Border Grid.Row="3" Style="{StaticResource GlassCardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Scan Log"
                           Style="{StaticResource SubHeaderTextStyle}"
                           Margin="0,0,0,12"/>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Style="{StaticResource ModernScrollViewerStyle}"
                              MaxHeight="250">
                    <TextBox x:Name="LogTextBox"
                             Style="{StaticResource LogTextBoxStyle}"
                             VerticalScrollBarVisibility="Disabled"
                             HorizontalScrollBarVisibility="Disabled"
                             TextWrapping="Wrap"
                             IsReadOnly="True"/>
                </ScrollViewer>
            </Grid>
        </Border>

    </Grid>
</Page>
