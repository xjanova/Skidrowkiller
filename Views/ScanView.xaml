<Page x:Class="SkidrowKiller.Views.ScanView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Scan">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="ðŸ” Smart Scan"
                       Style="{StaticResource HeaderTextStyle}"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Intelligent malware detection with scoring system to reduce false positives"
                       Style="{StaticResource BodyTextStyle}"/>
        </StackPanel>

        <!-- Scan Options -->
        <Border Grid.Row="1" Style="{StaticResource GlassCardStyle}" Margin="0,0,0,16">
            <StackPanel>
                <!-- Scan Mode Selection -->
                <TextBlock Text="Scan Mode"
                           Style="{StaticResource SubHeaderTextStyle}"
                           Margin="0,0,0,12"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <RadioButton x:Name="QuickScanRadio"
                                 Content="âš¡ Quick Scan"
                                 IsChecked="True"
                                 Style="{StaticResource ModernRadioButtonStyle}"
                                 GroupName="ScanMode"
                                 Checked="ScanModeRadio_Checked"/>
                    <RadioButton x:Name="DeepScanRadio"
                                 Content="ðŸ”¬ Deep Scan"
                                 Style="{StaticResource ModernRadioButtonStyle}"
                                 GroupName="ScanMode"
                                 Margin="24,0,0,0"
                                 Checked="ScanModeRadio_Checked"/>
                    <RadioButton x:Name="CustomScanRadio"
                                 Content="âš™ï¸ Custom"
                                 Style="{StaticResource ModernRadioButtonStyle}"
                                 GroupName="ScanMode"
                                 Margin="24,0,0,0"
                                 Checked="ScanModeRadio_Checked"/>
                </StackPanel>

                <!-- Scan Mode Description -->
                <Border Background="#10ffffff" CornerRadius="6" Padding="12,8" Margin="0,0,0,16">
                    <TextBlock x:Name="ScanModeDescription"
                               Text="Scans startup locations, running processes, and common malware hiding spots. Fast and efficient."
                               Style="{StaticResource BodyTextStyle}"
                               TextWrapping="Wrap"/>
                </Border>

                <Separator Margin="0,0,0,16" Background="{StaticResource BorderBrush}"/>

                <!-- Drive Selection -->
                <TextBlock Text="Select Drives to Scan"
                           Style="{StaticResource SubHeaderTextStyle}"
                           Margin="0,0,0,12"/>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" MaxHeight="60">
                    <ItemsControl x:Name="DrivesList">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Style="{StaticResource ToggleSwitchStyle}"
                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          Content="{Binding DisplayName}"
                                          Margin="0,0,20,8"
                                          IsEnabled="{Binding IsEnabled}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Separator Margin="0,16" Background="{StaticResource BorderBrush}"/>

                <!-- Scan Target Options (for Custom mode) -->
                <StackPanel x:Name="CustomOptionsPanel" Visibility="Collapsed">
                    <TextBlock Text="Scan Targets"
                               Style="{StaticResource SubHeaderTextStyle}"
                               Margin="0,0,0,12"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox x:Name="ScanFilesCheck"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsChecked="True"
                                  Content="Scan Files"
                                  Grid.Column="0"/>

                        <CheckBox x:Name="ScanRegistryCheck"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsChecked="True"
                                  Content="Scan Registry"
                                  Grid.Column="1"/>

                        <CheckBox x:Name="ScanProcessesCheck"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  IsChecked="True"
                                  Content="Scan Memory"
                                  Grid.Column="2"/>
                    </Grid>

                    <Separator Margin="0,16" Background="{StaticResource BorderBrush}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="AutoBackupCheck"
                              Style="{StaticResource ToggleSwitchStyle}"
                              IsChecked="True"
                              Content="Auto Backup before delete"/>

                    <CheckBox x:Name="ConfirmDeleteCheck"
                              Style="{StaticResource ToggleSwitchStyle}"
                              IsChecked="True"
                              Content="Confirm uncertain items"
                              Margin="40,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Progress -->
        <Border Grid.Row="2" Style="{StaticResource GlassCardStyle}" Margin="0,0,0,16">
            <StackPanel>
                <!-- Header with Status and Stats -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="StatusLabel"
                                   Text="Ready to scan"
                                   Style="{StaticResource SubHeaderTextStyle}"
                                   Foreground="{StaticResource CyanPrimaryBrush}"/>
                        <TextBlock x:Name="CurrentItemLabel"
                                   Text=""
                                   Style="{StaticResource BodyTextStyle}"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="600"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock x:Name="ScannedCountLabel"
                                   Text="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource CyanPrimaryBrush}"/>
                        <TextBlock Text=" scanned"
                                   Style="{StaticResource BodyTextStyle}"
                                   VerticalAlignment="Bottom"
                                   Margin="4,0,24,4"/>

                        <TextBlock x:Name="FoundCountLabel"
                                   Text="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource DangerBrush}"/>
                        <TextBlock Text=" threats"
                                   Style="{StaticResource BodyTextStyle}"
                                   VerticalAlignment="Bottom"
                                   Margin="4,0,0,4"/>
                    </StackPanel>
                </Grid>

                <!-- Section Progress (Current Phase) -->
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="{StaticResource CyanPrimaryBrush}"
                                CornerRadius="4"
                                Padding="8,4">
                            <TextBlock x:Name="SectionLabel"
                                       Text="Ready"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource BgPrimaryBrush}"/>
                        </Border>
                        <TextBlock x:Name="SectionIndexLabel"
                                   Text=""
                                   Style="{StaticResource BodyTextStyle}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </StackPanel>

                    <Border Grid.Column="1"
                            Background="{StaticResource BgTertiaryBrush}"
                            CornerRadius="6"
                            Height="12"
                            Margin="16,0">
                        <Border x:Name="SectionProgressFill"
                                Background="{StaticResource CyanGradientBrush}"
                                CornerRadius="6"
                                HorizontalAlignment="Left"
                                Width="0"/>
                    </Border>

                    <TextBlock Grid.Column="2"
                               x:Name="SectionPercentLabel"
                               Text="0%"
                               Style="{StaticResource BodyTextStyle}"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource CyanPrimaryBrush}"
                               Width="50"
                               TextAlignment="Right"/>
                </Grid>

                <!-- Total Progress -->
                <Grid Margin="0,12,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="{StaticResource SuccessBrush}"
                                CornerRadius="4"
                                Padding="8,4">
                            <TextBlock Text="TOTAL"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource BgPrimaryBrush}"/>
                        </Border>
                        <TextBlock x:Name="TotalItemsLabel"
                                   Text=""
                                   Style="{StaticResource BodyTextStyle}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </StackPanel>

                    <Border Grid.Column="1"
                            Background="{StaticResource BgTertiaryBrush}"
                            CornerRadius="6"
                            Height="12"
                            Margin="16,0">
                        <Border x:Name="TotalProgressFill"
                                Background="{StaticResource SuccessGradientBrush}"
                                CornerRadius="6"
                                HorizontalAlignment="Left"
                                Width="0"/>
                    </Border>

                    <TextBlock Grid.Column="2"
                               x:Name="TotalPercentLabel"
                               Text="0%"
                               Style="{StaticResource BodyTextStyle}"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource SuccessBrush}"
                               Width="50"
                               TextAlignment="Right"/>
                </Grid>

                <!-- Pre-scan status -->
                <TextBlock x:Name="PreScanStatusLabel"
                           Text=""
                           Style="{StaticResource BodyTextStyle}"
                           Foreground="{StaticResource TextTertiaryBrush}"
                           FontStyle="Italic"
                           Margin="0,12,0,0"
                           Visibility="Collapsed"/>
            </StackPanel>
        </Border>

        <!-- Log -->
        <Border Grid.Row="3" Style="{StaticResource GlassCardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Scan Log"
                           Style="{StaticResource SubHeaderTextStyle}"
                           Margin="0,0,0,12"/>

                <TextBox Grid.Row="1"
                         x:Name="LogTextBox"
                         Style="{StaticResource LogTextBoxStyle}"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
            <Button x:Name="StartButton"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Content="ðŸ” Start Scan"
                    Width="150"
                    Click="StartButton_Click"/>

            <Button x:Name="PauseButton"
                    Style="{StaticResource SuccessButtonStyle}"
                    Content="â¸ï¸ Pause"
                    Width="120"
                    Margin="16,0,0,0"
                    IsEnabled="False"
                    Click="PauseButton_Click"/>

            <Button x:Name="StopButton"
                    Style="{StaticResource DangerButtonStyle}"
                    Content="â¹ï¸ Stop"
                    Width="120"
                    Margin="16,0,0,0"
                    IsEnabled="False"
                    Click="StopButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
