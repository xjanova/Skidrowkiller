<Page x:Class="SkidrowKiller.Views.ScheduledScanView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="Transparent">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Scheduled Scans" FontSize="28" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <Border x:Name="StatusBadge" CornerRadius="4" Padding="8,4" Margin="12,0,0,0"
                        VerticalAlignment="Center" Background="{StaticResource SuccessBrush}">
                    <TextBlock x:Name="StatusText" Text="Running" FontSize="11" FontWeight="SemiBold" Foreground="White"/>
                </Border>
            </StackPanel>
            <TextBlock Text="Automate your security scans with daily, weekly, or custom schedules"
                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Next Scan Info -->
        <Border Grid.Row="1" Background="{StaticResource BgCardBrush}" CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Clock Icon -->
                <Border Grid.Column="0" Width="50" Height="50" CornerRadius="25"
                        Background="{StaticResource AccentGradientBrush}" Margin="0,0,16,0">
                    <TextBlock Text="ðŸ•" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <!-- Next Scan Details -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Next Scheduled Scan" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock x:Name="TxtNextScanName" Text="No scheduled scans" FontSize="18" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,2,0,0"/>
                    <TextBlock x:Name="TxtNextScanTime" Text="" FontSize="13"
                               Foreground="{StaticResource AccentPrimaryBrush}" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Quick Stats -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Border Background="{StaticResource BgTertiaryBrush}" CornerRadius="8" Padding="16,12" Margin="0,0,8,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="TxtTotalSchedules" Text="0" FontSize="20" FontWeight="Bold"
                                       Foreground="{StaticResource AccentPrimaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Schedules" FontSize="10" Foreground="{StaticResource TextTertiaryBrush}"/>
                        </StackPanel>
                    </Border>
                    <Border Background="{StaticResource BgTertiaryBrush}" CornerRadius="8" Padding="16,12">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="TxtActiveSchedules" Text="0" FontSize="20" FontWeight="Bold"
                                       Foreground="{StaticResource SuccessBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="Active" FontSize="10" Foreground="{StaticResource TextTertiaryBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Schedules List -->
        <Border Grid.Row="2" Background="{StaticResource BgCardBrush}" CornerRadius="8" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Your Schedules" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    <Button x:Name="BtnAddSchedule" Grid.Column="1" Content="+ New Schedule"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Click="BtnAddSchedule_Click" Padding="16,8"/>
                </Grid>

                <!-- Empty State -->
                <StackPanel x:Name="EmptyState" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="No schedules configured" FontSize="16"
                               Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Create a schedule to automate your security scans" FontSize="12"
                               Foreground="{StaticResource TextTertiaryBrush}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Schedules -->
                <ScrollViewer x:Name="SchedulesScroll" Grid.Row="1" VerticalScrollBarVisibility="Auto"
                              Style="{StaticResource ModernScrollViewerStyle}" Visibility="Collapsed">
                    <StackPanel x:Name="SchedulesPanel"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Actions -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button x:Name="BtnToggleService" Content="Stop Service"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="BtnToggleService_Click" Width="140"/>
        </StackPanel>
    </Grid>
</Page>
