<Page x:Class="SkidrowKiller.Views.SystemCleanupView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource BackgroundBrush}">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="System Cleanup"
                       FontSize="28" FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="Remove junk files and free up disk space"
                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Categories List -->
        <Border Grid.Row="1" Background="{StaticResource CardBrush}" CornerRadius="8" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Select items to clean" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    <Button x:Name="BtnSelectAll" Content="Select All"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="BtnSelectAll_Click" Margin="16,0,0,0" Padding="12,4"/>
                    <Button x:Name="BtnSelectNone" Content="Select None"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="BtnSelectNone_Click" Margin="8,0,0,0" Padding="12,4"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="CategoriesList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource BackgroundLightBrush}"
                                        CornerRadius="4" Padding="12" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                  VerticalAlignment="Center" Margin="0,0,12,0"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding Description}" FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       TextWrapping="Wrap" Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" x:Name="SizeText"
                                                   Text="{Binding SizeText}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource AccentBrush}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Progress -->
        <Border x:Name="ProgressPanel" Grid.Row="2" Background="{StaticResource CardBrush}"
                CornerRadius="8" Padding="16" Margin="0,16,0,0" Visibility="Collapsed">
            <StackPanel>
                <TextBlock x:Name="ProgressStatus" Text="Analyzing..."
                           Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                <ProgressBar x:Name="ProgressBar" Height="4"
                             Foreground="{StaticResource AccentBrush}" Maximum="100"/>
            </StackPanel>
        </Border>

        <!-- Summary and Actions -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock x:Name="SummaryText" Text="Select items and click 'Analyze' to calculate space"
                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="14"/>
                <TextBlock x:Name="TotalSizeText" Text=""
                           Foreground="{StaticResource AccentBrush}" FontSize="20" FontWeight="Bold"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="BtnAnalyze" Content="Analyze"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="BtnAnalyze_Click" Width="120"/>
                <Button x:Name="BtnClean" Content="Clean Now"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="BtnClean_Click" Width="120" Margin="12,0,0,0"
                        IsEnabled="False"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
