<Page x:Class="SkidrowKiller.Views.ThreatsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Threats">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content Area -->
        <Grid Grid.Row="0" Margin="24,24,24,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <TextBlock Text="Threats Found"
                           Style="{StaticResource HeaderTextStyle}"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Review detected threats and choose what to do with them. Pay attention to the category and recommendation."
                           Style="{StaticResource BodyTextStyle}"/>
            </StackPanel>

            <!-- Threat Count, Sorting, and Pagination Controls -->
            <Grid Grid.Row="1" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Count and Refresh -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="ThreatCountLabel"
                               Text="0 threats found"
                               Style="{StaticResource SubHeaderTextStyle}"
                               VerticalAlignment="Center"/>
                    <Button Content="Refresh"
                            Style="{StaticResource NavButtonStyle}"
                            Padding="12,4"
                            Margin="16,0,0,0"
                            VerticalAlignment="Center"
                            Click="RefreshButton_Click"/>
                </StackPanel>

                <!-- Right: Sort and Page Size -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- Sort By -->
                    <TextBlock Text="Sort:" Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="SortByComboBox" Width="130" VerticalAlignment="Center"
                              SelectionChanged="SortByComboBox_SelectionChanged">
                        <ComboBoxItem Content="Severity" IsSelected="True"/>
                        <ComboBoxItem Content="Name"/>
                        <ComboBoxItem Content="Date Found"/>
                        <ComboBoxItem Content="Category"/>
                        <ComboBoxItem Content="Score"/>
                    </ComboBox>
                    <Button x:Name="SortOrderButton" Content="▼" Width="30"
                            Style="{StaticResource SecondaryButtonStyle}"
                            VerticalAlignment="Center" Margin="4,0,0,0"
                            ToolTip="Toggle sort order"
                            Click="SortOrderButton_Click"/>

                    <!-- Page Size -->
                    <TextBlock Text="Show:" Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center" Margin="20,0,8,0"/>
                    <ComboBox x:Name="PageSizeComboBox" Width="70" VerticalAlignment="Center"
                              SelectionChanged="PageSizeComboBox_SelectionChanged">
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="20" IsSelected="True"/>
                        <ComboBoxItem Content="50"/>
                        <ComboBoxItem Content="100"/>
                        <ComboBoxItem Content="All"/>
                    </ComboBox>
                </StackPanel>
            </Grid>

            <!-- Threats List with ScrollViewer -->
            <Border Grid.Row="2" Style="{StaticResource GlassCardStyle}" Margin="0,0,0,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer x:Name="ThreatsScrollViewer" Grid.Row="0"
                                    VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Disabled"
                                    Style="{StaticResource ModernScrollViewerStyle}"
                                    PanningMode="VerticalOnly">
                        <ItemsControl x:Name="ThreatsListBox"
                                      Background="Transparent"
                                      Focusable="False">
                            <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource BgTertiaryBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Severity Score Box -->
                                        <Border Grid.Column="0"
                                                Width="70" Height="70"
                                                CornerRadius="8"
                                                Margin="0,0,16,0"
                                                VerticalAlignment="Top">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#3006b6d4"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Severity}" Value="Critical">
                                                            <Setter Property="Background" Value="#40ef4444"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Severity}" Value="High">
                                                            <Setter Property="Background" Value="#40f59e0b"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Severity}" Value="Medium">
                                                            <Setter Property="Background" Value="#40eab308"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Severity}" Value="Low">
                                                            <Setter Property="Background" Value="#3006b6d4"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock Text="{Binding Score}"
                                                           FontWeight="Bold"
                                                           FontSize="24"
                                                           HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#06b6d4"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Severity}" Value="Critical">
                                                                    <Setter Property="Foreground" Value="#ef4444"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Severity}" Value="High">
                                                                    <Setter Property="Foreground" Value="#f59e0b"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Severity}" Value="Medium">
                                                                    <Setter Property="Foreground" Value="#eab308"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock Text="{Binding SeverityDisplay}"
                                                           FontSize="10"
                                                           FontWeight="SemiBold"
                                                           HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#06b6d4"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Severity}" Value="Critical">
                                                                    <Setter Property="Foreground" Value="#ef4444"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Severity}" Value="High">
                                                                    <Setter Property="Foreground" Value="#f59e0b"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Severity}" Value="Medium">
                                                                    <Setter Property="Foreground" Value="#eab308"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>

                                        <!-- Main Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                            <!-- Row 1: Malware Name + Category Badge -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                <TextBlock Text="{Binding MalwareName}"
                                                           FontWeight="Bold"
                                                           FontSize="15"
                                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                                <Border CornerRadius="4" Padding="8,3" Margin="10,0,0,0"
                                                        VerticalAlignment="Center">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#3006b6d4"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Category}" Value="Ransomware">
                                                                    <Setter Property="Background" Value="#40ef4444"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Category}" Value="RAT">
                                                                    <Setter Property="Background" Value="#40ef4444"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Category}" Value="Stealer">
                                                                    <Setter Property="Background" Value="#40ef4444"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Category}" Value="Trojan">
                                                                    <Setter Property="Background" Value="#40f59e0b"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Category}" Value="Cryptominer">
                                                                    <Setter Property="Background" Value="#40f59e0b"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Category}" Value="Crack">
                                                                    <Setter Property="Background" Value="#40a855f7"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Category}" Value="Keygen">
                                                                    <Setter Property="Background" Value="#40a855f7"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Category}" Value="Activator">
                                                                    <Setter Property="Background" Value="#40f59e0b"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding CategoryDisplay}" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </Border>
                                                <!-- Can Ignore Badge -->
                                                <Border CornerRadius="4" Padding="8,3" Margin="6,0,0,0"
                                                        VerticalAlignment="Center" Visibility="{Binding CanIgnore, Converter={StaticResource BoolToVisibilityConverter}}">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="#3022c55e"/>
                                                    </Border.Background>
                                                    <TextBlock Text="May Ignore" FontSize="10" FontWeight="SemiBold" Foreground="#22c55e"/>
                                                </Border>
                                            </StackPanel>

                                            <!-- Row 2: Filename -->
                                            <TextBlock Text="{Binding Name}"
                                                       FontWeight="SemiBold"
                                                       FontSize="12"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       Margin="0,0,0,2"/>

                                            <!-- Row 3: Path -->
                                            <TextBlock Text="{Binding Path}"
                                                       Foreground="{StaticResource TextTertiaryBrush}"
                                                       FontSize="11"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="550"
                                                       Margin="0,0,0,8"/>

                                            <!-- Row 4: Detection Reason -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                                <TextBlock Text="Detected: " FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextTertiaryBrush}"/>
                                                <TextBlock Text="{Binding DetectionReason}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource TextSecondaryBrush}"
                                                           TextWrapping="Wrap"
                                                           MaxWidth="500"/>
                                            </StackPanel>

                                            <!-- Row 5: Recommendation Box -->
                                            <Border CornerRadius="6" Padding="12,10" Margin="0,4,0,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#15ffffff"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CanIgnore}" Value="False">
                                                                <Setter Property="Background" Value="#20f59e0b"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <StackPanel>
                                                    <TextBlock Text="Recommendation" FontSize="10" FontWeight="Bold"
                                                               Foreground="{StaticResource TextTertiaryBrush}" Margin="0,0,0,4"/>
                                                    <TextBlock Text="{Binding Recommendation}"
                                                               FontSize="12"
                                                               TextWrapping="Wrap"
                                                               MaxWidth="550"
                                                               LineHeight="18">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding CanIgnore}" Value="False">
                                                                        <Setter Property="Foreground" Value="#f59e0b"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>

                                        <!-- Actions -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Top" Margin="16,0,0,0" Width="120">
                                            <Button Content="Quarantine"
                                                    ToolTip="Move to quarantine for later review"
                                                    Tag="{Binding}"
                                                    Style="{StaticResource SecondaryButtonStyle}"
                                                    Padding="12,8"
                                                    Margin="0,0,0,6"
                                                    HorizontalAlignment="Stretch"
                                                    Click="QuarantineButton_Click"/>
                                            <Button Content="Delete"
                                                    ToolTip="Delete permanently (backup will be created)"
                                                    Tag="{Binding}"
                                                    Style="{StaticResource DangerButtonStyle}"
                                                    Padding="12,8"
                                                    Margin="0,0,0,6"
                                                    HorizontalAlignment="Stretch"
                                                    Click="RemoveButton_Click"/>
                                            <Button Content="Ignore"
                                                    ToolTip="Add to whitelist and ignore in future scans"
                                                    Tag="{Binding}"
                                                    Style="{StaticResource SuccessButtonStyle}"
                                                    Padding="12,8"
                                                    HorizontalAlignment="Stretch"
                                                    Click="WhitelistButton_Click"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Pagination Controls -->
                    <Border x:Name="PaginationPanel" Grid.Row="1" Background="{StaticResource BgTertiaryBrush}"
                            CornerRadius="0,0,8,8" Padding="16,12" Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Page Info (Left) -->
                            <TextBlock x:Name="PageInfoText" Grid.Column="0"
                                       Text="Showing 1-20 of 100"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"/>

                            <!-- Page Navigation (Center) -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="FirstPageButton" Content="⏮" Width="36"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        ToolTip="First page"
                                        Click="FirstPageButton_Click"/>
                                <Button x:Name="PrevPageButton" Content="◀" Width="36"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Margin="4,0,0,0" ToolTip="Previous page"
                                        Click="PrevPageButton_Click"/>
                                <TextBlock x:Name="CurrentPageText" Text="Page 1 of 5"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           FontWeight="SemiBold" VerticalAlignment="Center"
                                           Margin="16,0"/>
                                <Button x:Name="NextPageButton" Content="▶" Width="36"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        ToolTip="Next page"
                                        Click="NextPageButton_Click"/>
                                <Button x:Name="LastPageButton" Content="⏭" Width="36"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Margin="4,0,0,0" ToolTip="Last page"
                                        Click="LastPageButton_Click"/>
                            </StackPanel>

                            <!-- Jump to Page (Right) -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Go to:" Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox x:Name="GoToPageTextBox" Width="50" VerticalAlignment="Center"
                                         KeyDown="GoToPageTextBox_KeyDown"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Empty State -->
                    <StackPanel x:Name="EmptyState" Grid.Row="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                        <TextBlock Text="✅" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="No threats found"
                                   Style="{StaticResource SubHeaderTextStyle}"
                                   HorizontalAlignment="Center"
                                   Margin="0,16,0,0"/>
                        <TextBlock Text="Your system appears to be clean"
                                   Style="{StaticResource BodyTextStyle}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Fixed Action Buttons at bottom -->
        <Border x:Name="FloatingActionPanel"
                Grid.Row="1"
                Background="{StaticResource BgSecondaryBrush}"
                Padding="24,16"
                Margin="24,0,24,24"
                CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.5" Direction="270"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="QuarantineAllButton"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Content="Quarantine All"
                        Padding="24,12"
                        FontWeight="SemiBold"
                        Click="QuarantineAllButton_Click"/>

                <Button x:Name="RemoveAllButton"
                        Style="{StaticResource DangerButtonStyle}"
                        Content="Delete All"
                        Padding="24,12"
                        Margin="16,0,0,0"
                        FontWeight="SemiBold"
                        Click="RemoveAllButton_Click"/>

                <Button x:Name="WhitelistAllButton"
                        Style="{StaticResource SuccessButtonStyle}"
                        Content="Ignore All Safe"
                        Padding="24,12"
                        Margin="16,0,0,0"
                        FontWeight="SemiBold"
                        Click="WhitelistAllButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
