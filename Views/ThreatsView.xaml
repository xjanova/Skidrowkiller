<Page x:Class="SkidrowKiller.Views.ThreatsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Threats">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="âš ï¸ Threats Found"
                       Style="{StaticResource HeaderTextStyle}"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Review detected threats and choose what to do with them"
                       Style="{StaticResource BodyTextStyle}"/>
        </StackPanel>

        <!-- Threats List -->
        <Border Grid.Row="1" Style="{StaticResource GlassCardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock x:Name="ThreatCountLabel"
                               Text="0 threats found"
                               Style="{StaticResource SubHeaderTextStyle}"/>
                    <Button Content="Refresh"
                            Style="{StaticResource NavButtonStyle}"
                            Padding="12,4"
                            Margin="16,0,0,0"
                            Click="RefreshButton_Click"/>
                </StackPanel>

                <ListBox Grid.Row="1"
                         x:Name="ThreatsListBox"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemContainerStyle="{StaticResource ThreatListItemStyle}"
                         SelectionMode="Extended"
                         VirtualizingPanel.IsVirtualizing="True">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Severity Icon -->
                                <Border Grid.Column="0"
                                        Width="40" Height="40"
                                        CornerRadius="8"
                                        Margin="0,0,12,0"
                                        VerticalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Severity}" Value="Critical">
                                                    <Setter Property="Background" Value="#30ef4444"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Severity}" Value="High">
                                                    <Setter Property="Background" Value="#30f59e0b"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Severity}" Value="Medium">
                                                    <Setter Property="Background" Value="#30f59e0b"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Severity}" Value="Low">
                                                    <Setter Property="Background" Value="#3006b6d4"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding Score}"
                                               FontWeight="Bold"
                                               FontSize="14"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Severity}" Value="Critical">
                                                        <Setter Property="Foreground" Value="#ef4444"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Severity}" Value="High">
                                                        <Setter Property="Foreground" Value="#f59e0b"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Severity}" Value="Medium">
                                                        <Setter Property="Foreground" Value="#f59e0b"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Severity}" Value="Low">
                                                        <Setter Property="Foreground" Value="#06b6d4"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>

                                <!-- Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding Path}"
                                               Foreground="{StaticResource TextTertiaryBrush}"
                                               FontSize="11"
                                               TextTrimming="CharacterEllipsis"
                                               MaxWidth="500"/>
                                    <TextBlock Text="{Binding Description}"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontSize="11"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <!-- Type Badge -->
                                <Border Grid.Column="2"
                                        Background="#20ffffff"
                                        CornerRadius="4"
                                        Padding="8,4"
                                        Margin="12,0"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Type}"
                                               FontSize="10"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </Border>

                                <!-- Actions -->
                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="ðŸ”’"
                                            ToolTip="Quarantine"
                                            Tag="{Binding}"
                                            Style="{StaticResource NavButtonStyle}"
                                            Padding="8,4"
                                            Click="QuarantineButton_Click"/>
                                    <Button Content="ðŸ—‘ï¸"
                                            ToolTip="Delete"
                                            Tag="{Binding}"
                                            Style="{StaticResource NavButtonStyle}"
                                            Padding="8,4"
                                            Click="RemoveButton_Click"/>
                                    <Button Content="âœ…"
                                            ToolTip="Whitelist"
                                            Tag="{Binding}"
                                            Style="{StaticResource NavButtonStyle}"
                                            Padding="8,4"
                                            Click="WhitelistButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Empty State -->
                <StackPanel x:Name="EmptyState"
                            Grid.Row="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="âœ…" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="No threats found"
                               Style="{StaticResource SubHeaderTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"/>
                    <TextBlock Text="Your system appears to be clean"
                               Style="{StaticResource BodyTextStyle}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
            <Button x:Name="QuarantineAllButton"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Content="ðŸ”’ Quarantine Selected"
                    Click="QuarantineAllButton_Click"/>

            <Button x:Name="RemoveAllButton"
                    Style="{StaticResource DangerButtonStyle}"
                    Content="ðŸ—‘ï¸ Delete Selected"
                    Margin="16,0,0,0"
                    Click="RemoveAllButton_Click"/>

            <Button x:Name="WhitelistAllButton"
                    Style="{StaticResource SuccessButtonStyle}"
                    Content="âœ… Whitelist Selected"
                    Margin="16,0,0,0"
                    Click="WhitelistAllButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
