<Page x:Class="SkidrowKiller.Views.WhitelistView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Whitelist">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Page.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="âœ… Whitelist"
                       Style="{StaticResource HeaderTextStyle}"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Items in the whitelist will never be flagged as threats"
                       Style="{StaticResource BodyTextStyle}"/>
        </StackPanel>

        <!-- Add New -->
        <Border Grid.Row="1" Style="{StaticResource GlassCardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Add to Whitelist"
                               Style="{StaticResource SubHeaderTextStyle}"
                               Margin="0,0,0,12"/>

                    <TextBox x:Name="PathTextBox"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="0,0,0,8"/>

                    <TextBox x:Name="ReasonTextBox"
                             Style="{StaticResource ModernTextBoxStyle}"
                             Text="User added"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Margin="16,0,0,0">
                    <Button Content="Browse..."
                            Style="{StaticResource NavButtonStyle}"
                            Click="BrowseButton_Click"
                            Margin="0,0,0,8"/>
                    <Button Content="Add"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Click="AddButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Whitelist -->
        <Border Grid.Row="2" Style="{StaticResource GlassCardStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock x:Name="CountLabel"
                               Text="0 items in whitelist"
                               Style="{StaticResource SubHeaderTextStyle}"/>
                </StackPanel>

                <ListBox Grid.Row="1"
                         x:Name="WhitelistListBox"
                         Background="Transparent"
                         BorderThickness="0"
                         ItemContainerStyle="{StaticResource ThreatListItemStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="{Binding Path}"
                                               Foreground="{StaticResource TextTertiaryBrush}"
                                               FontSize="11"
                                               TextTrimming="CharacterEllipsis"
                                               MaxWidth="600"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock Text="{Binding Reason}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="11"/>
                                        <TextBlock Text=" | "
                                                   Foreground="{StaticResource TextTertiaryBrush}"
                                                   FontSize="11"/>
                                        <TextBlock Text="{Binding AddedAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                                                   Foreground="{StaticResource TextTertiaryBrush}"
                                                   FontSize="11"/>
                                    </StackPanel>
                                </StackPanel>

                                <Border Grid.Column="1"
                                        Background="#2010b981"
                                        CornerRadius="4"
                                        Padding="8,4"
                                        Margin="12,0"
                                        VerticalAlignment="Center"
                                        Visibility="{Binding IsPattern, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="Pattern"
                                               FontSize="10"
                                               Foreground="#10b981"/>
                                </Border>

                                <Button Grid.Column="2"
                                        Content="ðŸ—‘ï¸"
                                        ToolTip="Remove from whitelist"
                                        Tag="{Binding Id}"
                                        Style="{StaticResource NavButtonStyle}"
                                        Padding="8,4"
                                        Click="RemoveButton_Click"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Empty State -->
                <StackPanel x:Name="EmptyState"
                            Grid.Row="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="Collapsed">
                    <TextBlock Text="ðŸ“" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="Whitelist is empty"
                               Style="{StaticResource SubHeaderTextStyle}"
                               HorizontalAlignment="Center"
                               Margin="0,16,0,0"/>
                    <TextBlock Text="Add items to prevent them from being flagged"
                               Style="{StaticResource BodyTextStyle}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
