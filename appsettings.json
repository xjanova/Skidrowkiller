{
  "Application": {
    "Name": "Skidrow Killer",
    "Version": "3.6.0",
    "Environment": "Development"
  },
  "Scanning": {
    "MaxConcurrentScans": 1,
    "ScanTimeoutMinutes": 60,
    "EnableFileScan": true,
    "EnableRegistryScan": true,
    "EnableProcessScan": true,
    "ExcludedDriveTypes": [ "Network", "CDRom" ],
    "MaxFileSizeMB": 100,
    "ProgressUpdateIntervalMs": 100
  },
  "Protection": {
    "Enabled": true,
    "MonitorIntervalSeconds": 3,
    "AutoResetStatusSeconds": 30,
    "SuspiciousPorts": [ 4444, 5555, 6666, 7777, 8888, 9999, 31337, 12345, 65535 ]
  },
  "Backup": {
    "Enabled": true,
    "BackupBeforeRemove": true,
    "RetentionDays": 7,
    "MaxBackupSizeMB": 1024
  },
  "Logging": {
    "MinimumLevel": "Information",
    "EnableFileLogging": true,
    "EnableConsoleLogging": false,
    "LogRetentionDays": 30,
    "LogFileSizeLimitMB": 10,
    "LogPath": "Logs"
  },
  "Updates": {
    "CheckForUpdatesOnStartup": true,
    "UpdateCheckUrl": "https://api.github.com/repos/xjanova/Skidrowkiller/releases/latest",
    "AutoDownloadUpdates": false
  },
  "ThreatAnalysis": {
    "MinimumScoreToReport": 20,
    "CriticalScoreThreshold": 80,
    "HighScoreThreshold": 60,
    "MediumScoreThreshold": 40,
    "LowScoreThreshold": 20,
    "EnableBoosterPatterns": true,
    "EnableSafeContextReduction": true,
    "CautionDirectoryMultiplier": 0.7
  }
}
